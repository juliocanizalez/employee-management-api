{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "outDir": "./build",
    "strict": true,
    "paths": {
      "@controllers": ["controllers/department.controller.ts"],
      "@services": ["services/department.service.ts"],
      "@validators": ["validators/department.validator.ts"],
      "@routes/*": ["routes/department.routes.ts"],
      "@config": ["config/prisma.ts"],
      "@middlewares": ["middlewares/handleValidationErrors.ts"]
    },
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
